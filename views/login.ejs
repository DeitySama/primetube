<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.1/axios.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Primetube</title>
</head>
<body>
    <section class="h-screen w-full flex flex-row items-center justify-center">
        <div class="w-1/3">
            <form action="" class="space-y-5 border p-10 rounded-md" id="login">
                <h1 class="font-bold text-2xl">Primetube Login</h1>
                <div class="space-y-3">
                    <label for="" class="text-sm text-gray-400">Email</label>
                    <input class="block w-full border p-2 rounded-md" type="email" id="email" name="email" placeholder="Email" required>
                </div>
                <div class="space-y-3">
                    <label for="" class="text-sm text-gray-400">Password</label>
                    <input class="block w-full border p-2 rounded-md" type="password" id="password" name="password" placeholder="Password" required>
                </div>
                <div><button class="block w-full py-2 bg-black text-white rounded-md">Login</button></div>
            </form>
        </div>
    </section>
</body>
<script>
    const loginForm = document.getElementById('login');

    loginForm.addEventListener('submit',(event)=>{
        event.preventDefault();
        const email = loginForm['email'].value;
        const password = loginForm['password'].value;

        axios.post('/primetube/users/login',{email,password}).then((res)=>{
            if(res.data.user){
                window.location.href="/primetube/admin";
            }
        })
    })
</script>
</html>